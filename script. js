// QUIZ PAGE LOGIC
function submitMood(){
  const m=document.querySelector('input[name="mood"]:checked');
  const r=document.getElementById("quizResult");
  if(!m){r.innerText="Please select a mood ğŸ˜Š";return;}
  const answers={
    happy:"Youâ€™re glowing today âœ¨",
    sad:"Itâ€™s okay, you are supported ğŸ’™",
    angry:"Breathe gently, youâ€™re safe ğŸ«¶",
    anxious:"You are not alone ğŸ¤"
  };
  r.innerText=answers[m.value];
}

// VENT PAGE LOGIC
function saveVent(){
  const text=document.getElementById("ventText").value.trim();
  if(!text){alert("Write something ğŸ’¬");return;}
  const list=document.getElementById("ventList");
  const d=document.createElement("div");
  d.className="box";
  d.innerText=text;
  list.prepend(d);
  document.getElementById("ventText").value="";
}

// AI PAGE LOGIC
function sendAI(){
  const t=document.getElementById("aiInput").value.trim();
  if(!t){return;}
  const chat=document.getElementById("aiChat");
  chat.innerHTML += `<div class="user-msg"><b>You:</b> ${t}</div>`;
  let reply="Iâ€™m here with you ğŸ’™";
  const msg=t.toLowerCase();
  if(msg.includes("sad")) reply="I'm really sorry. You are important ğŸ¤";
  if(msg.includes("stress")) reply="Slow breath in... out... ğŸŒ¿";
  chat.innerHTML += `<div class="ai-msg"><b>UNfold AI:</b> ${reply}</div>`;
  document.getElementById("aiInput").value="";
}

// BLOG PAGE LOGIC
function addBlog(){
  const t=document.getElementById("blogTitle").value.trim();
  const c=document.getElementById("blogContent").value.trim();
  if(!t||!c){alert("Write title and blog âœï¸");return;}
  const list=document.getElementById("blogList");
  const d=document.createElement("div");
  d.className="box";
  d.innerHTML=`<h3>${t}</h3><p>${c}</p>`;
  list.prepend(d);
  document.getElementById("blogTitle").value="";
  document.getElementById("blogContent").value="";
}
